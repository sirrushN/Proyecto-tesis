<div style="width:80%; margin:10px auto; position: relative;">

  <h1>Informe de Notas</h1>

  <table class="table-index">
    <thead>
      <tr>
        <th>Curso</th>
        <th>Estudiante</th>
        <th>Nota</th>
      </tr>
    </thead>

    <tbody>
      <% @informs_record.each do |record| %>
        <tr>
          <td><%= record.course.period %>, <%= record.course.subject.name %> impartida por <%= record.course.professor.name %></td>
          <td><%= record.student.name %></td>
          <td><%= record.score %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="margen">
    <%= link_to "Generar PDF", informs_path(request.params.merge(:format => "pdf")), class:"btn-back" %>
  </div>
</div>
