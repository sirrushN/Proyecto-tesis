<div style="width:80%; margin:10px auto; position: relative;">

  <table class="table-index">
  <tr>
    <th>Nombre:</th>
    <td><%= @student.name %></td>
  </tr>
  <tr>
    <th>Dirección:</th>
    <td><%= @student.address %></td>
  </tr>
  <tr>
    <th>Teléfono:</th>
    <td><%= @student.phone %></td>
  </tr>
</table>

<br>

  <div class="back-div">
    <%= link_to 'Editar', edit_student_path(@student), class:"btn-edit" %> |
    <%= link_to 'Mostrar todos los estudiantes', students_path, class:"btn-show" %>
  </div>
</div>
